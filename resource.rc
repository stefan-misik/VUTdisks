                    "SysLink",WS_VISIBLE | WS_TABSTOP,170,43,99,8

    EDITTEXT        IDC_APP_NAME, 110,7,60,8,
                    NOT WS_BORDER | NOT WS_TABSTOP | ES_READONLY
